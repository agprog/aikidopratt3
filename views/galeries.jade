extends layout.jade

block content
	div#wrapper(ng-app="index",ng-controller="GalerieCtl")
		include header
		include menu.jade
		section#row1-body.row
			div#content
				for galery in galeries
					a.content-galery(href="/galeries/#{galery._id}",title="galerie #{galery.title}")
						img.img-galery(src="/uploads/galeries/#{galery._id}/thumbnails/#{galery.photos[0].name}",alt="galerie photos #{galery.title}")
						span.title-galery #{galery.title}
